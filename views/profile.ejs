  <!-- Page wrapper  -->
  <!-- ============================================================== -->
  <div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
      <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
          <h4 class="page-title">Form Basic</h4>
          <div class="ms-auto text-end">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                  Library
                </li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
      <!-- ============================================================== -->
      <!-- Start Page Content -->
      <!-- ============================================================== -->
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <form class="form-horizontal">
              <div class="card-body">
                <div style="display: flex;">  
                  <h4 class="card-title">YOUR PROFILE</h4>
                  <img src="<% if(locals.user) { %><%= locals.user.avatar %><% } %>" height="80" width="80" class="rounded-circle"> 
                </div>
                
                <hr><hr><hr>
                <div class="form-group row">
                  <label for="fname" class="col-sm-3 text-end control-label col-form-label" >name</label>
                  <div class="col-sm-9">
                      <input type="text" class="form-control" name="phone" id="phone" value="<% if(locals.user) { %><%= locals.user.name %><% } %>" disabled/>
                  </div>
                </div>

                <div class="form-group row">
                  <label for="fname" class="col-sm-3 text-end control-label col-form-label" >gender</label>
                  <div class="col-sm-9">
                      <input type="text" class="form-control" name="phone" id="phone" value="<% if(locals.user) { %><%= locals.user.gender %><% } %>" disabled/>
                  </div>
                </div>

                <div class="form-group row">
                  <label for="fname" class="col-sm-3 text-end control-label col-form-label" >hobby</label>
                  <div class="col-sm-9">
                      <input type="text" class="form-control" name="phone" id="phone" value="<% if(locals.user) { %><%= locals.user.hobby %><% } %>" disabled/>
                  </div>
                </div>

                <div class="form-group row">
                  <label for="fname" class="col-sm-3 text-end control-label col-form-label" >city</label>
                  <div class="col-sm-9">
                      <input type="text" class="form-control" name="phone" id="phone" value="<% if(locals.user) { %><%= locals.user.city %><% } %>" disabled/>
                  </div>
                </div>

                <div class="form-group row">
                  <label for="fname" class="col-sm-3 text-end control-label col-form-label" >Message</label>
                  <div class="col-sm-9">
                      <input type="text" class="form-control" name="phone" id="phone" value="<% if(locals.user) { %><%= locals.user.description %><% } %>" disabled/>
                  </div>
                </div>

                <div class="border-top">
                  <div class="card-body">
                    <a href="/updatedata/<% if(locals.user) { %><%= locals.user.id %><% } %>">Edit Your Profile </a>
                  </div>
                </div>

            </form>
          </div>
        </div>
      </div>
      <!-- editor -->
      <!-- ============================================================== -->
      <!-- End PAge Content -->
